<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <link rel="stylesheet" href="/styles.css">
  <title>Gerenciamento de Usuários</title>
</head>
<body>
  <h1>Gerenciar Usuários</h1>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Nome de Usuário</th>
        <th>Nível de Acesso</th>
        <th>Nova Senha</th>
        <th>Alterar Nível</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach((user) => { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.username %></td>
          <td><%= user.role %></td>
          <form action="/update-user" method="POST">
            <td>
              <input type="password" name="newPassword" placeholder="Nova senha">
            </td>
            <td>
              <select name="newRole">
                <option value="colaborador" <% if (user.role === 'colaborador') { %> selected <% } %>>Colaborador</option>
                <option value="gerente" <% if (user.role === 'gerente') { %> selected <% } %>>Gerente</option>
                <option value="administrador" <% if (user.role === 'administrador') { %> selected <% } %>>Administrador</option>
              </select>
            </td>
            <td>
              <input type="hidden" name="id" value="<%= user.id %>">
              <button type="submit">Salvar</button>
            </td>
          </form>
        </tr>
      <% }) %>
    </tbody>
  </table>
  <a href="/">Voltar ao Dashboard</a>
</body>
</html>
